<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_margin_quiz"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.03" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_margin_quiz"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.97" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/instructions_guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mEnterQuiz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorText"
        android:textSize="24sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="@id/end_margin_quiz"
        app:layout_constraintStart_toStartOf="@id/start_margin_quiz"
        app:layout_constraintTop_toBottomOf="@id/instructions_guideline" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#61d800"
        android:text="Go"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@id/end_margin_quiz"
        app:layout_constraintTop_toBottomOf="@id/mEnterQuiz" />


</androidx.constraintlayout.widget.ConstraintLayout>