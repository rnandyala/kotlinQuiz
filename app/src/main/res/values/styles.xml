<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/black</item>
        <!-- statusbar color -->
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/barStyle</item>
    </style>

    <style name="barStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">
            @drawable/splash_screen
        </item>
    </style>

<!--
    <style name="radioButtonBackground" parent ="@android:style/Widget.CompoundButton.RadioButton">
        @drawable/radiobutton_background

    </style>
    -->


</resources>